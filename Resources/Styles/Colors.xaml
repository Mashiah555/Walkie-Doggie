<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Light Mode Colors -->
    <Color x:Key="AccentColorLight">DarkSlateBlue</Color>
    <Color x:Key="PrimaryColorLight">#003741</Color>
    <Color x:Key="SecondaryColorLight">DarkSlateBlue</Color> <!--483D8B-->
    <Color x:Key="ActionTextColorLight">white</Color>
    <Color x:Key="PrimaryTextColorLight">#141414</Color>
    <Color x:Key="SecondaryTextColorLight">dimgray</Color>
    <Color x:Key="ErrorColorLight">#FF3B30</Color>
    <Color x:Key="WarningColorLight">#FFCC00</Color>

    <!-- Dark Mode Colors -->
    <Color x:Key="AccentColorDark">MediumSlateBlue</Color>
    <Color x:Key="PrimaryColorDark">#007378</Color>
    <Color x:Key="SecondaryColorDark">MediumSlateBlue</Color> <!--7B68EE-->
    <Color x:Key="ActionTextColorDark">black</Color>
    <Color x:Key="PrimaryTextColorDark">whitesmoke</Color>
    <Color x:Key="SecondaryTextColorDark">darkgray</Color>
    <Color x:Key="ErrorColorDark">#FF453A</Color>
    <Color x:Key="WarningColorDark">#FFD60A</Color>

    <!--Accent Colors-->
    <Color x:Key="MidnightBlue">#007378</Color>
    <Color x:Key="Magenta">Magenta</Color>

    <!--Gray Shades-->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>
    <Color x:Key="Black">#000000</Color>

</ResourceDictionary>