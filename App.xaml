<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Walkie_Doggie"
             xmlns:cnvrt="clr-namespace:Walkie_Doggie.Helpers"
             x:Class="Walkie_Doggie.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <cnvrt:ConvertToBool x:Key="ConvertToBoolKey" />
            <cnvrt:ConvertToRoundedString x:Key="ConvertToRoundedStringKey" />
            <cnvrt:ConvertThemeToString x:Key="ConvertThemeToStringKey" />
            <cnvrt:SelectedItemConverter x:Key="SelectedItemConverterKey" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
